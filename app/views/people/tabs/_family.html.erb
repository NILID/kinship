<dl class="dl-horizontal">
  <dt>Mother</dt>
  <dd>
    <% if @person.mother %>
      <p><%= link_to @person.mother.full_name, @person.mother%></p>
    <% else %>
      <p><%= link_to new_person_path, :class => 'btn btn-primary' do %><i class="icon-plus icon-white"></i> Add Mother<%end%></p>
    <% end %>
  </dd>
  <dt>Father</dt>
  <dd>
    <% if @person.father %>
      <p><%= link_to @person.father.full_name, @person.father%></p>
    <% else %>
      <p><%= link_to new_person_path, :class => 'btn btn-primary' do %><i class="icon-plus icon-white"></i> Add Father<%end%></p>
    <% end %>
  </dd>
  <% if ! @children.nil? %>
    <% @children.each do |child| %>
      <dt>Child</dt>
      <dd>
      <%= link_to child.full_name, child %><br>
      </dd>
    <% end %>
  <% end %>
  <br>
  <% if ! @primary_siblings.nil? %>
    <% @primary_siblings.each do |sibling| %>
      <dt>Sibling</dt>
      <dd>
      <%= link_to sibling.full_name, sibling %><br>
      </dd>
    <% end %>
  <% end %>
  <br>
  <% if ! @half_siblings.nil? %>
    <% @half_siblings.each do |half_sibling| %>
      <dt>Half Sibling</dt>
      <dd>
      <%= link_to half_sibling.full_name, half_sibling %><br>
      </dd>
    <% end %>
  <% end %>
</dl>
