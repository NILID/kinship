<dl class="dl-horizontal">
  <!-- Parents -->
  <% person.parents.each do |parent| %>
    <dt><%= parent_title(parent.gender) %></dt>
    <dd><%= link_to parent.full_name, parent%></dd>
  <% end %>
  <% if person.parents.length < 2 %>
    <dd>
      <%= link_to new_person_path, class: 'btn btn-primary' do %>
        <i class="icon-plus icon-white"></i><span>Add Parent</span>
      <%end%>
    </dd>
  <% end %>

  <!-- Siblings -->
  <% if @person.siblings.present? %>
    <% @person.siblings.each do |sibling| %>
      <dt>Sibling</dt>
      <dd>
      <%= link_to sibling.full_name, sibling %><br>
      </dd>
    <% end %>
  <% end %>
  <% if @person.siblings(:half).present? %>
    <% @person.siblings(:half).each do |half_sibling| %>
      <dt>Half Sibling</dt>
      <dd>
      <%= link_to half_sibling.full_name, half_sibling %><br>
      </dd>
    <% end %>
  <% end %>

  <!-- Spouses -->
  <% if person.marriages.present? %>
    <% person.marriages.each do |marriage| %>
      <dt>Spouse</dt>
      <dd>
        <% spouse = marriage.spouse_of(person) %>
        <%= link_to spouse.full_name, spouse %>&nbsp;(m. <%= marriage.date.try(:formatted) %>)<br>
      </dd>
    <% end %>
  <% end %>

  <dd>
    <%= link_to new_life_event_marriage_path(life_event_marriage: {
        person_1_id: person.id
      }), class: 'btn btn-primary' do %>
      <i class="icon-plus icon-white"></i><span>Add Marriage</span>
    <%end%>
  </dd>

  <!-- Children -->
  <% if @person.children.present? %>
    <% @person.children.each do |child| %>
      <dt>Child</dt>
      <dd>
      <%= link_to child.full_name, child %><br>
      </dd>
    <% end %>
  <% end %>
</dl>
