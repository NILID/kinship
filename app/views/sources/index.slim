p#notice= notice
h1 Source Index
= paginate @sources
table#sources.table.table-striped
  thead
    tr
      th Title
      th Url
      th Citation body
      th colspan="3"
  tbody
    - @sources.each do |source|
      tr
        td= source.title
        td= source.url
        td= source.citation_body
        td= link_to 'Show', source
        td= link_to 'Edit', edit_source_path(source)
        td= link_to 'Destroy', source, method: :delete, data: {confirm: 'Are you sure?'}
br
= link_to 'New Source', new_source_path
